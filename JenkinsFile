pipeline {
  agent {
    docker {
      image 'python:3.11'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {

    stage('Setup') {
      steps {
        sh '''
          apt-get update
          apt-get install -y docker.io git
        '''
      }
    } 

    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/hdewan63/cicd-pipeline-testing-ashkua.git'
      }
    }

 
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "hddewan/ultimate-cicd:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "cicd-pipeline-testing-ashkua"
            GIT_USER_NAME = "hdewan63"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config --global --add safe.directory /var/lib/jenkins/workspace/firstpipeline
                    git config user.email "hdewan63@gmail.com"
                    git config user.name "Himanshu Dewan"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" deployment.yml
                    git add deployment.yml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}
